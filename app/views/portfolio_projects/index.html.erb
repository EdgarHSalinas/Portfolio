<h1>Portfolio Projects</h1>

<a href="portfolio_projects/new"> Create New Project Manually </a>

<%= link_to "Create Project", new_portfolio_project_path %>




<% @portfolio_items.each do |portfolio_item| %>
  <p><%= portfolio_item.title %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%> 
  
  <%# image_tag helper converts it to hmtl ==> <img src="http://placehold.it/350x200" alt="350x200"> %>
  <%= link_to "Edit Portfolio", edit_portfolio_project_path(portfolio_item.id) %>

<% end %>